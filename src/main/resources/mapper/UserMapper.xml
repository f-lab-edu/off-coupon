<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 위 코드가 mapper 설정을 하는 코드 -->

<!-- Mapper를 사용하는 Repository의 전체 경로를 적어줘야함. -->
<mapper namespace="com.flab.offcoupon.repository.UserMapperRepository">

    <insert id="save" parameterType="com.flab.offcoupon.controller.api.UserMapperDTO">
        INSERT INTO  users (email, password, name, birthDate, phone)
        VALUES (#{email}, #{password}, #{name}, #{birthDate},#{phone} )
    </insert>

</mapper>